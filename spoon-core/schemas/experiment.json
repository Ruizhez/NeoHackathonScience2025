{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Experiment",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Name of the experiment"
    },
    "discription": {
      "type": "string",
      "description": "Description of the experiment"
    },
    "simulator": {
      "type": "string",
      "description": "Simulator used for the experiment"
    },
    "test_results": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of test result identifiers"
    }
  },
  "required": ["name", "discription", "simulator", "test_results"],
  "additionalProperties": false
}